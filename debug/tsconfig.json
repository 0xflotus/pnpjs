{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "baseUrl": ".",
        "rootDir": "../",
        "outDir": "../debugging/",
        "declaration": true,
        "types": [
            "adal",
            "sharepoint"
        ],
        "lib": [
            "es6",
            "dom"
        ],
        "paths": {
            "@pnp/*": [
                "../packages/*"
            ]
        },
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "inlineSources": true,
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "experimentalDecorators": true
    },
    "include": [
        "./debug.ts"
    ]
}